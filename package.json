{
  "name": "headwind",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "build:plugin": "node tools/scripts/build-plugin.mjs",
    "build:wasm": "node tools/scripts/build-wasm.mjs",
    "build:wasm:node": "node tools/scripts/build-wasm-node.mjs",
    "build:playground": "pnpm turbo run build --filter=@headwind/web-playground",
    "dev:playground": "pnpm turbo run dev --filter=@headwind/web-playground"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "wrangler": "^4.61.0"
  },
  "engines": {
    "node": ">=20"
  }
}
