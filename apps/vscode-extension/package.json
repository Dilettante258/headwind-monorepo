{
  "name": "headwind-vscode",
  "displayName": "Headwind Transformer",
  "description": "Atomic CSS to Semantic CSS compiler powered by Rust + WASM",
  "version": "0.2.0",
  "publisher": "Dilettante258",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dilettante258/headwind-monorepo.git",
    "directory": "apps/vscode-extension"
  },
  "homepage": "https://github.com/Dilettante258/headwind-monorepo/tree/main/apps/vscode-extension",
  "bugs": {
    "url": "https://github.com/Dilettante258/headwind-monorepo/issues"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "headwind.transform",
        "title": "Headwind: Transform Current File"
      },
      {
        "command": "headwind.previewTransform",
        "title": "Headwind: Preview Transform (Diff)"
      },
      {
        "command": "headwind.applyTransform",
        "title": "Headwind: Apply Transform"
      },
      {
        "command": "headwind.openPanel",
        "title": "Headwind: Open Control Panel"
      }
    ],
    "configuration": {
      "title": "Headwind",
      "properties": {
        "headwind.transformOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically transform Tailwind classes when saving supported files"
        },
        "headwind.namingMode": {
          "type": "string",
          "enum": [
            "hash",
            "readable",
            "camelCase"
          ],
          "default": "hash",
          "enumDescriptions": [
            "Hash-based names (c_a1b2c3)",
            "Readable abbreviated names (p4_m2)",
            "CamelCase names (p4M2)"
          ],
          "description": "Class naming strategy for generated atomic class names"
        },
        "headwind.outputMode": {
          "type": "string",
          "enum": [
            "global",
            "cssModules"
          ],
          "default": "global",
          "enumDescriptions": [
            "Global CSS with string class names",
            "CSS Modules with styles.xxx references"
          ],
          "description": "Output format for transformed class names"
        },
        "headwind.cssModulesAccess": {
          "type": "string",
          "enum": [
            "dot",
            "bracket"
          ],
          "default": "dot",
          "enumDescriptions": [
            "Dot notation: styles.className",
            "Bracket notation: styles[\"className\"]"
          ],
          "description": "CSS Modules property access style (only used when outputMode is cssModules)"
        },
        "headwind.cssVariables": {
          "type": "string",
          "enum": [
            "var",
            "inline"
          ],
          "default": "var",
          "enumDescriptions": [
            "Use CSS custom properties: var(--text-3xl)",
            "Inline literal values: 1.875rem"
          ],
          "description": "CSS value output mode"
        },
        "headwind.unknownClasses": {
          "type": "string",
          "enum": [
            "remove",
            "preserve"
          ],
          "default": "preserve",
          "enumDescriptions": [
            "Remove unrecognized class names from output",
            "Keep unrecognized class names in output"
          ],
          "description": "How to handle unrecognized Tailwind classes"
        },
        "headwind.colorMode": {
          "type": "string",
          "enum": [
            "hex",
            "oklch",
            "hsl",
            "var"
          ],
          "default": "hex",
          "enumDescriptions": [
            "Hex color values: #3b82f6",
            "OKLCH color space: oklch(0.623 0.214 259.815)",
            "HSL color values: hsl(217, 91%, 60%)",
            "CSS custom properties: var(--color-blue-500)"
          ],
          "description": "Color output format for generated CSS"
        },
        "headwind.elementTree": {
          "type": "boolean",
          "default": false,
          "description": "Generate element tree in transform result, showing tag hierarchy with classes and [ref=eN] identifiers for AI secondary processing"
        },
        "headwind.cssOutputPattern": {
          "type": "string",
          "default": "[name].css",
          "description": "Filename pattern for generated CSS files in global mode. [name] is replaced with the source filename stem. CSS Modules always uses [name].module.css."
        },
        "headwind.include": {
          "type": "string",
          "default": "**/*.{jsx,tsx,html}",
          "description": "Glob pattern for files to include in workspace transform"
        }
      }
    }
  },
  "scripts": {
    "build:wasm": "node ../../tools/scripts/build-wasm-node.mjs",
    "prebuild": "npm run build:wasm",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@headwind/config": "workspace:*",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.2.0",
    "tsup": "^8.3.5"
  }
}
